<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:layout_margin="5dp"
                android:onClick="test1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基础模块" />

        <Button
                android:onClick="test2"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义View" />

        <Button
                android:onClick="test3"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动画" />
    </LinearLayout>

    <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:onClick="test4"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络" />
        <Button
                android:onClick="test5"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广播" />

        <Button
                android:onClick="test6"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容提供者" />




    </LinearLayout>

    <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:onClick="test7"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多媒体" />

        <Button
                android:onClick="test8"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务" />

        <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backage_image"
                android:text=".9图" />

    </LinearLayout>

    <View
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

</LinearLayout>